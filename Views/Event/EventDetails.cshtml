@using Microsoft.AspNetCore.Identity
@model EventsForDetailsViewModel
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Events";
}

@if(Model.EventDetailed.doIOwnedIt){
<div>
    <h2 class="pt-3 pb-3">@Model.EventDetailed.Name </h2>
    <h5>Osób zapisanych:</h5>
    <p>@Model.EventDetailed.HowManyPeople/@Model.EventDetailed.CurrentPeopleNumber </p>
    <h5>Czas rozpoczęcia:</h5>
    <p>@Model.EventDetailed.StartDate </p>
    <h5>Event contribiutor:</h5>
    <p>@Model.Owner.Name @Model.Owner.Surname</p>
    
    <table>
    @foreach (var item in Model.UsersAccepted)
    {
       <tr>
            <td>
               @item.Name
            </td>
        </tr>
    }
    </table>

    <table>
    @foreach (var item in Model.UsersToAccept)
    {
       <tr>
            <td>
               @item.Name
            </td>
            <td>
                <a asp-controller="Event" asp-action="AccepUser" asp-route-eventId = "@Model.EventDetailed.Id" asp-route-userId = "@item.Id">Accept User</a>
                <a asp-controller="Event" asp-action="RejectUser" asp-route-eventId = "@Model.EventDetailed.Id" asp-route-userId = "@item.Id">Reject User</a>
            </td>
        </tr>
    }
    </table>
    <a asp-controller="Event" asp-action="RemoveEvent" asp-route-eventId = "@Model.EventDetailed.Id">Remove Event</a>  
</div>
}else{
<div>
    <h2 class="pt-3 pb-3">@Model.EventDetailed.Name </h2>
    <h5>Osób zapisanych:</h5>
    <p>@Model.EventDetailed.HowManyPeople/@Model.EventDetailed.CurrentPeopleNumber </p>
    <h5>Czas rozpoczęcia:</h5>
    <p>@Model.EventDetailed.StartDate </p>
    <h5>Event contribiutor:</h5>
    <p>@Model.Owner.Name @Model.Owner.Surname</p>
    
    <table>
    @foreach (var item in Model.UsersAccepted)
    {
       <tr>
            <td>
               @item.Name
            </td>
        </tr>
    }
    </table>
    <div>
        @if(Model.EventDetailed.Status == 1) {
            <a asp-controller="Event" asp-action="ResignEvent" asp-route-id = "@Model.EventDetailed.Id">Resign (you are accepted)</a>  
        }else if(Model.EventDetailed.Status == 2){
            <a asp-controller="Event" asp-action="ResignEvent" asp-route-id = "@Model.EventDetailed.Id">Resign</a>  
        }else if (Model.EventDetailed.Status == 3){
             <p>You were rejected by event owner.</p>
        }else{
            <a asp-controller="Event" asp-action="JoinEvent" asp-route-id = "@Model.EventDetailed.Id">Join</a> 
        }
    </div>
</div>
}